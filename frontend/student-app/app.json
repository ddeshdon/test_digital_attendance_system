{
  "expo": {
    "name": "Student Attendance App",
    "slug": "student-attendance-app",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",

    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to detect classroom beacons for attendance marking.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to detect classroom beacons for attendance marking.",
        "NSLocationWhenInUseUsageDescription": "This app uses location services to improve beacon detection accuracy."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION", 
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"

    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}